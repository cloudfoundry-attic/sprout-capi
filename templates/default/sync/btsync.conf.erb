
{
  "device_name": "<%= node.name %>",
  "listening_port" : 0, // 0 - randomize port
  "download_limit" : 0,
  "upload_limit" : 0,
  "webui" : {},
  "shared_folders" :
  [
<% @sync_folders.each.with_index do |folder, i| %>
    {
      "secret" : "<%= folder['secret'] %>",
      "dir" : "<%= folder['dir'] %>",
      "use_relay_server" : false,
      "use_tracker" : false,
      "use_dht" : false,
      "search_lan" : true,
      "use_sync_trash" : false,
      "overwrite_changes" : true,
      "known_hosts" : []
    }<%= i + 1 >= @sync_folders.length ? '' : ',' %>
<% end %>
  ]
}
